<!doctype html>
<html>

<head>
    <title>Register | SNP</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3" style="display:grid;">

            <h1><span class="fa fa-sign-in"></span> Signup</h1>
            
            <!-- REGISTER FORM -->
            <form>
                <div class="error form-group"></div>

                <div class="col-6-lg" style="display: inline-block;width:45%">
                    <div class="form-group">
                        <label>Nume</label>
                        <input type="text" class="form-control" name="lastName" id="lastName"/>
                    </div>
                </div>
                <div class="col-6-lg" style="display: inline-block;width:45%;margin-left:7%">
                    <div class="form-group">
                        <label>Prenume</label>
                        <input type="text" class="form-control" name="firstName" id="firstName"/>
                    </div>
                </div>

                <div class="col-6-lg" style="display: inline-block;width:45%">
                    <div class="form-group">
                        <label>Telefon</label>
                        <input type="tel" class="form-control" name="telephone" id="telephone"/>
                    </div>
                </div>
                <div class="col-6-lg" style="display: inline-block;width:45%;margin-left:7%">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="username" id="username"/>
                    </div>
                </div>

                <div class="form-group" style="width:90%;">
                    <label>Parola</label>
                    <input type="password" class="form-control" name="password" id="password">
                </div>
                <div class="form-group" style="width: 90%;">
                    <label>Confirmare Parola</label>
                    <input type="password" class="form-control" name="password" id="passwordConfirm">
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Signup</button>
            </form>
            <hr>
            <p>Ai deja cont? <a href="/login">Log In</a></p>
            <p>Sau mergi <a href="/">acasa</a>.</p>

        </div>
    </div>
    <script>
        const form = document.querySelector('form');
        const username = document.querySelector('#username');
        const firstName = document.querySelector('#firstName');
        const lastName = document.querySelector('#lastName');
        const telephone = document.querySelector('#telephone');
        const password = document.querySelector('#password');
        const passwordConfirm = document.querySelector('#passwordConfirm');
        const display = document.querySelector('.error');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            display.textContent = '';
            try {
                const res = await fetch('/api/auth/register', {
                    method: 'POST',
                    //body: JSON.stringify({username: username.value, password: password.value}),
                    body: JSON.stringify({username: username.value, firstName: firstName.value, lastName: lastName.value, telephone: telephone.value, password: password.value, passwordConfirmation: passwordConfirm.value}),
                    headers: {'Content-Type' : 'application/json'}
                });
                const data = await res.json();
                if(res.status === 400 || res.status === 401) {
                    return display.textContent = `${data.message}. ${data.error ? data.error : ''}`;
                }
                const userData = encodeURIComponent(JSON.stringify(data.userData));
                location.assign("/");
            }
            catch(err) {
                console.log(err.message);
            }
        });
    </script>
</body>

</html>